@page "/"
@inject ILoginService LoginService
@inject NavigationManager Navigation

<PageTitle>ScanFlow</PageTitle>

<div class="d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="card shadow p-5" style="width: 100%; max-width: 400px;">
        <h3 class="text-center">Login</h3>

        <EditForm Model="loginForm" OnValidSubmit="DoLogin">
            <FluentValidationValidator />

            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>

                <InputText @bind-Value="loginForm.Email"
                           class="form-control"
                           id="email"
                           placeholder="Enter your email"
                           autocomplete="email" />

                <ValidationMessage For="@(() => loginForm.Email)" class="text-danger small" />

                <small class="form-text text-muted">
                    We'll never share your email with anyone else.
                </small>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>

                <InputText @bind-Value="loginForm.Password"
                           type="password"
                           class="form-control"
                           id="password"
                           placeholder="Enter your password" />

                <ValidationMessage For="@(() => loginForm.Password)" class="text-danger small" />
            </div>

            <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="remember">
                <label class="form-check-label" for="remember">Remember me</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </EditForm>

        <div class="text-center mt-3">
            <small>Don't have an account? <a href="/register">Register here</a></small>
        </div>
    </div>
</div>

@code {
    private LoginFormModel loginForm = new();

    private async Task DoLogin()
    {
        var result = await LoginService.LoginAsync(new LoginRequestModel
        {
            Email = loginForm.Email,
            Password = loginForm.Password
        });

        Navigation.NavigateTo("/analyzeimage");
    }
}
